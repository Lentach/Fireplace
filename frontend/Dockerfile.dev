FROM ghcr.io/cirruslabs/flutter:latest

WORKDIR /app

# Copy dependency files first for layer caching
COPY pubspec.* ./
RUN flutter pub get

# Copy the rest of the source
COPY . .

EXPOSE 8080
# Convert Windows CRLF to Unix LF, then run the script
CMD ["sh", "-c", "sed -i 's/\\r$//' dev-entrypoint.sh && sh dev-entrypoint.sh"]
